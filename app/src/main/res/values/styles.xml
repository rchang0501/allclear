<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar Styles -->
    <style name="ToolbarTitile">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarNavigateIconLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>

    <style name="ToolbarEditButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/stockBlue</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>

    <!-- List View Styles -->
    <style name="ListSFProTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>
    <style name="ListSFProDate">
        <item name="android:textSize">12.5sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>

    <!-- Detail View Card Styles -->
    <style name="CardSFProTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardSFProInfo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>
    <style name="CardIcon">
        <item name="tint">@color/stockBlue</item>
    </style>

    <!-- Random -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>